<!-- views/partials/header.hbs -->
<header>
  <nav class='bg-gray-800 mb-4 py-2'>
    <div class='container mx-auto flex justify-between items-center'>
      <div class='flex items-center'>
        <img src='{{logoUrl}}' alt='Company Logo' class='w-10 mr-3'/>
        <span class='text-2xl text-yellow-600'>{{title}}</span>
      </div>
      <ul class='flex space-x-4'>
        {{#each menu}}
          <li><a
              href='{{url}}'
              class='text-white hover:text-gray-400'
            >{{link}}</a></li>
        {{/each}}
      </ul>
    </div>
  </nav>
</header>