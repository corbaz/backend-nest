{
  "name": "backend",
  "version": "0.0.1",
  "description": "App Backend en Nest con TS - SQLite3 - Typeorm - Tailwind y Bun",
  "author": "julio.corbaz@gmail.com",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/corbaz/backend-nest"
  },
  "homepage": "https://backend-nest-0xhi.onrender.com/",
  "license": "UNLICENSED",
  "scripts": {
    "build": "bun run data && bun run views && bun run public",
    "data": "cp data.sqlite dist/data.sqlite",
    "views": "cp -R views dist/views",
    "public": "cp -R public dist/public",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "nest build && bun run build && node dist/main",
    "sqlite3": "sqlite3 data.sqlite",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "overrides": {
    "fastify": "^5.1.0",
    "@fastify/middie": "^9.0.2"
  },
  "dependencies": {
    "@fastify/middie": "^9.0.2",
    "@fastify/static": "^8.0.3",
    "@fastify/view": "^10.0.1",
    "@nestjs/common": "^10.4.12",
    "@nestjs/core": "^10.4.12",
    "@nestjs/mapped-types": "^2.0.6",
    "@nestjs/platform-fastify": "^10.4.12",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cross-env": "^7.0.3",
    "fastify": "^5.1.0",
    "handlebars": "^4.7.8",
    "reflect-metadata": "^0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.12",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "trustedDependencies": [
    "@nestjs/core",
    "@swc/core",
    "sqlite3"
  ]
}
